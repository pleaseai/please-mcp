{
  "name": "@pleaseai/mcp",
  "type": "module",
  "version": "0.1.0",
  "packageManager": "bun@1.3.0",
  "description": "MCP Wrapper - Proxy MCP server for filtering and customizing upstream MCP server tools",
  "author": "Minsu Lee <amondnet>",
  "license": "MIT",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "proxy",
    "wrapper",
    "claude"
  ],
  "main": "dist/index.js",
  "bin": {
    "mcp-wrapper": "dist/index.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --format esm",
    "build:tsc": "tsc",
    "start": "node dist/index.js",
    "dev": "bun run build && node dist/index.js",
    "watch": "tsc --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "express": "^4.18.2",
    "open": "^10.0.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.0.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "eslint": "^9.37.0",
    "typescript": "^5.3.3"
  }
}
